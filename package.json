{
  "name": "api",
  "version": "0.5.0",
  "description": "",
  "author": "Higor Alves <higorhaalves@gmail.com>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prettier": "npx prettier --write src/**/*.{ts,tsx,json}",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest -o --silent",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "release": "standard-version",
    "release:major": "yarn run release --release-as major --no-verify",
    "release:minor": "yarn run release --release-as minor --no-verify",
    "release:patch": "yarn run release --release-as patch --no-verify",
    "release:alpha": "yarn run release --prerelease alpha --no-verify",
    "release:beta": "yarn run release --prerelease beta --no-verify"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,json}": [
      "pretty-quick --staged"
    ],
    "*.{tsx,ts}": [
      "yarn run lint"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^8.0.4",
    "@nestjs/config": "^1.0.0",
    "@nestjs/core": "^8.0.4",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/mongoose": "^8.0.0",
    "@nestjs/passport": "^8.0.0",
    "@nestjs/platform-express": "^8.0.4",
    "@nestjs/swagger": "^5.0.4",
    "@sendgrid/mail": "^7.4.5",
    "@sentry/node": "^6.9.0",
    "@types/mongodb": "^3.6.20",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.1",
    "coinbase-commerce-node": "^1.0.4",
    "csurf": "^1.11.0",
    "express-rate-limit": "^5.3.0",
    "hbs": "^4.1.2",
    "helmet": "^4.6.0",
    "logdna-winston": "^3.0.5",
    "mongodb": "^4.0.0",
    "mongoose": "^5.13.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "stripe": "^8.163.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@nestjs/cli": "^8.0.2",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^8.0.4",
    "@types/bcrypt": "^5.0.0",
    "@types/coinbase-commerce-node": "^1.0.6",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^16.3.3",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/stripe": "^8.0.416",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "standard-version": "^9.3.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
